.videoRef
	position: relative
	width: 100%
	img
		max-height: 100px

div.videoRef span
	width: 100%
	height: 100%
	top: 0
	left: 0
	position: absolute
	background: url("/static/img/play-btn.png") no-repeat
	background-position: center center
	background-size: 220%
	z-index: 100

#mobilVideoDiv
	display: none
	font-size: 13px

@media screen and (max-width: 900px)
	#mobilVideoDiv
		font-size: 14px


.video-list-small
	@media screen and (max-width: 450px)
		column-count: 1
		.item
			float: left
			width: 300px
		
	@media screen and (min-width: 451px) and (max-width: 1199px)
		column-count: 2
		.item
			width: 300px

.video-scrollbar
	@media screen and (min-width: 1200px)
		column-count: 5  
		column-gap: 1px
		
		margin-top: 7px;
		height: 200px
		width: auto
		padding-left: 1px
		padding-right: 0.5px
		line-height: auto
		overflow-x: scroll
		overflow-y: hidden

		.item
			width: 120px
			height: auto

.item-info
	margin-top: 5px

.video-delete-btn
	margin-top: 2px
	margin-left: 2px

#groupVideo
	width: 100%
	max-height: 400px

	&:focus
		outline: none

@media screen and (max-width: 900px)
	#groupVideo
		display: none

.group-highlighted
	box-shadow: 2px 2px 4px #339 !important

@media only screen and (max-width : 320px)
	.album
		width: 280px
	.album-cover
		width:280px
		height:280px

@media only screen and (min-width : 321px) and (max-width : 479px)
	#albums
		align: center
	.album
		width: 300px
	.album-cover
		width:300px
		height:300px

@media only screen and (min-width : 480px)
	.album
		margin: 0.5em;
		width: 320px;
	.album-cover
		width:320px
		height:320px

.album-cover
	display: block
	transition(all 1s ease)
	background-size(cover)
	background-position:center;

.album-cover:hover
	transform(scale(1.2))

.album-cover-wrapper
	overflow: hidden

.album>a:hover
	text-decoration: none

#create-album
	vertical-align: top
	text-align: center

.photo
	width:300px;
	height:300px;
	-moz-background-size: cover;
	-webkit-background-size: cover;
	background-size: cover;
	background-position:center;

.photo-wrapper
	overflow: hidden

.trash-icon
	float:right
	margin-right:5px


.trash-icon:hover
	cursor:pointer

.shorten-album-description
	max-width: 200px
	float: left
	ellipsis()

@media screen and (max-width: 960px)
	.shorten-group-name
		width: 200px

/*detail view of an album, width is just a workaround TODO */
.gallery-feed{
	margin-top: 10px;
	width: 101%;
}

.album-list-small
	margin-horizontal: -7px
	
	.album
		width: 206px
		margin: 7px
	.album-cover
		width: 186px
		height: 186px
	.shorten-group-name
		margin-top: 8px
		font-size: 16px

.photo-list-small
	margin-horizontal: -7px
	
	.item
		width: 206px
		margin: 7px
		
		h4
			margin-bottom: 0
			font-weight: normal
			font-size: 14px
	.photo
		width: 186px
		height: 186px
	.manage-album-btn
		margin-right: 0
		margin-top: 5px

.album-header
	border-color: rgba(0,0,0,0.06)
	
	.panel-body
		padding: 0
	
	.album-cover
		height: 100px
		width: 100px
		transform: none
		border-top-left-radius: 4px
		border-bottom-left-radius: 4px
	
	.album-header-info
		margin-left: 120px
		margin-top: 25px
		margin-right: 25px
		
		h2
			ellipsis()

.photo-options
	.dropdown-toggle
		padding: 5px
		height: 25px
		color: #333

.group-photo
	img
		max-width: 100%

.group-photo-background
	display: none

@media only screen and (max-width: 740px)
	.details-photo
		display:none;

	body.group-photo-detail-view
		height: 100%
		background-color: #000
		
		> header
		.group > header
		.group-sidebar
		.scroll-to-top
		.album-header
			display: none !important
		
		.group
		.container
		.row
		.group-content
		.group-photo-list
			height: 100%
			width: 100%
			padding: 0
			margin: 0
			max-width: 100%
		
		.group-photo
			position: absolute
			height: 100%
			width: 100%
			margin: 0
			
			img
				display: none
		
		.group-photo-background
			display: block
			height: 100%
			width: 100%
			background-size: contain
			background-repeat: no-repeat
			background-position: center center

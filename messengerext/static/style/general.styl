html
	height: 100%

.container
	max-width: 1000px
	padding: 0

@media screen and (max-width: 992px)
	.container
		width: 100% !important
		padding-horizontal: 40px

@media screen and (max-width: 820px) //768px
	.container
		padding-horizontal: 15px

body > .container
	margin-top: 40px

h1, h2, h3
	margin: 0

.card
	box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)
	padding: 10px
	border-top: 1px solid rgba(0, 0, 0, 0.1)

.feed-placeholder
	text-align: center
	font-size: 22px

.scroll-to-top
	display: none
	width: 40px
	height: 40px
	position: fixed
	bottom: 10px
	right: 10px
	background: url('/static/img/Arrow-Up.png') no-repeat
	background-size: cover
	z-index: 1000

	&:hover
		text-decoration:none

	&:focus
		outline: none

/*@media screen and (max-width: 768px)
	.scroll-to-top
		left: 10px
		right: auto
*/

.delete-button
	cursor: pointer

.modal-form .form-group:last-child
	margin-bottom: 0

tr.ui-draggable-dragging
	display: block

.toast
	display: none
	width: 300px
	position: fixed
	bottom: 20px
	left: 50%
	margin-left: -150px
	background-color: #383838
	color: #F0F0F0
	padding: 5px
	text-align: center
	border-radius: 5px
	-webkit-box-shadow: 0px 0px 24px -1px rgba(56, 56, 56, 1)
	-moz-box-shadow: 0px 0px 24px -1px rgba(56, 56, 56, 1)
	box-shadow: 0px 0px 24px -1px rgba(56, 56, 56, 1)

.modal-dialog
	margin-left: auto
	margin-right: auto

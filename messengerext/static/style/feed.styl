
.feed
	.item
		float: left
		width: 300px

@media screen and (min-width: 600px) and (max-width: 1180px)
	section.group
		.item
			width: 250px

@media screen and (max-width: 600px)
	section.group
		.item
			width: 90%


.item
	background: #ffffff
	box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3)
	margin: 10px
	padding: 10px
	border-top: 1px solid rgba(0, 0, 0, 0.1)
	display: inline-block

	img
		max-width: 100%
		height: auto
		margin: auto
		display: block
	
	> a:active, > a:focus
		outline: none
	
	a
		font-weight: bold
	
	.item-info
		margin-bottom: 0
	
	.item-media
		display: block
		margin-bottom: 5px

.item a, .image-modal-title
	color: #1a1a1a


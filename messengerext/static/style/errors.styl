.error-page
	text-align: center
	font-family: Montserrat,"Helvetica Neue",Helvetica,Arial,sans-serif
	font-weight: 700
	letter-spacing: 1px

	.logo-container
		width: auto
		margin: 0 auto

	.error-logo
		display: inline-block

		img
			display: inline-block
			height: 55px

	.error-page-container
		margin-top: 20px
		text-align: center

	.error-container
		width: auto
		margin: 0 auto

	.error-info
		font-size: 17px


	.error-text
		font-size: 17px

		a
			color: rgb(51, 51, 153)

	.error-info
		display: inline-block
		border-bottom-color: black
		border-bottom-width: 3px
		border-bottom-style: solid
		margin-right: 4px

	.error-number
		font-size: 160px
		display: inline-block


.group-files
	.page-header
		margin-bottom: 0 !important

.file-table
	.column-icon
		font-size: 20px
		width: 20px
		text-align: center
	
	.column-name a
		color: #333
		display: inline-block
		width: 100%
	
	.column-created
		width: 30%
	
	.column-actions
		width: 40px
		text-align: right
	
	td, th
		vertical-align: middle !important

.file-drag
	display: inline-block
	height: 30px
	width: 30px
	font-size: 25px
	line-height: 30px
	text-align: center

.directory.ui-droppable-hover
	background: alpha(green, 0.2)
.navbar-brand
	padding: 5px
	.navbar-logo			
		margin-right: 8px

		@media (max-width: 340px)
			display: none

	img		
		display: inline-block	
		height: 100%		

body > header
	.navbar a
		color: #333 !important
	
	.navbar
		height: navbar-height
		background-color: rgba(255, 255, 255, 0.98)
		margin-bottom: 0
	
	.navbar-header, .navbar-brand, .navbar-user
	.navbar-nav, .navbar-nav>li, .navbar-nav>li>a
		line-height: 75px
		height: 75px
	
	.navbar-brand
		margin-top: -15px
		padding: 15px

		.navbar-logo			
			margin-right: 8px

			@media (max-width: 340px)
				display: none

		img		
			display: inline-block	
			height: 100%			
	
	.navbar-nav
		font-size: 16px
		
		.additional-responsive-menu-item
			display: none
		
		li a
			padding-vertical: 0
		
		li.active a
			background: rgba(0, 0, 0, 0.02) !important
			font-weight: bold
			margin-top: -1px
		
		a:hover, a:focus, a:active
			background: rgba(0, 0, 0, 0.02) !important
	
	.navbar-toggle
		height: 34px
		margin-top: ((navbar-height - @height)/2)
		margin-bottom: 0
	
	.navbar-user
		font-size: 16px
		margin-right: 0
		
		.user-avatar
			height: 30px
			width: 30px
			margin-right: 8px
		
		.caret
			margin-left: 10px
		
		.dropdown-menu
			margin-top: -10px
		
		.dropdown-toggle
			display: inline-block
			height: 100%
			padding-horizontal: 10px
		
		.dropdown-toggle:hover, .dropdown-toggle:focus, .dropdown-toggle:active
			text-decoration: none
		
		.dropdown:hover, .dropdown.open
			background: rgba(0, 0, 0, 0.02)
	
	.navbar-collapse.in, .navbar-collapse.collapsing
		background: #fff
		
		.additional-responsive-menu-item
			display: block
		
		.navbar-user
			display: none
	
	.navbar-collapse.in
		height: 530px !important // TODO super weird bug
		background-color: #fff
		z-index: 1000
	
	@media (max-width: 820px)
		.navbar-header
			float: none
		.navbar-left,.navbar-right
			float: none !important
		.navbar-toggle
			display: block
		.navbar-collapse
			border-top: 1px solid transparent
			box-shadow: inset 0 1px 0 rgba(255,255,255,0.1)
		.navbar-fixed-top
			top: 0
			border-width: 0 0 1px
		.navbar-collapse.collapse
			display: none !important
		.navbar-nav
			float: none
			margin-top: 7.5px
		.navbar-nav>li
			float: none
		.navbar-nav>li>a
			padding-top: 10px
			padding-bottom: 10px
		.collapse.in
			display: block !important
